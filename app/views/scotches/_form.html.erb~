<%= form_for(@scotch) do |f| %>
  <% if @scotch.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@scotch.errors.count, "error") %> prohibited this scotch from being saved:</h2>

      <ul>
      <% @scotch.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :location %><br>
    <%= f.text_field :location %>
  </div>
  <div class="field">
    <%= f.label :college %><br>
    <%= f.text_field :college %>
  </div>
  <div class="field">
    <%= f.label :website %><br>
    <%= f.text_field :website_url %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_field :description %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
