#scottish-coast-bg
  .container.max-height
    .row.text-center.max-height.hidden-xs
      .col-md-6.col-sm-6.max-size
        %table.max-size
          %tbody.max-size
            %tr.max-size
              %td.max-size
                =image_tag 'logos/scotty_huge_white.png', style: 'width: 100%'
      .col-md-6.col-sm-6.max-size
        %table.max-size
          %tbody.max-size
            %tr.max-size
              %td.max-size
                %h1{style: 'line-height: .9'}
                  %div Discover & Share
                  %div
                    %i{style: 'font-size: 60%; position: relative; top: -5px'} your
                  %div
                    Favorite Scotches
                %a.fb_login{href: '/auth/facebook'}
                  =image_tag 'facebook-icon.png', style: 'width: 20px'
                  Log In With Facebook
                -if flash.any?
                  -flash.each do |k,v|
                    %div{:class => translate_flash_key_to_bootstrap_class(k), style: 'padding: 15px; width: 300px; margin: 10px auto'}
                      =v
    .row.text-center.visible-xs.max-height
