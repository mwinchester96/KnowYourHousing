= form_for(@review) do |f|
  - if @review.errors.any?
    #error_explanation
      %h2
        = pluralize(@review.errors.count, "error")
        prohibited this review from being saved:
      %ul
        - @review.errors.full_messages.each do |message|
          %li= message
  .form-group
    %b Realtor
    =f.collection_select(:realtor_id, Realtor.all, :id, :name, prompt: true)

  .form-group
    %b Score
    %br
    -(1..5).each do |i|
      = f.label :score, :class => 'radio-inline' do
        = f.radio_button :score, i
        =i

  .form-group
    %b Affordability
    %br
    -(1..5).each do |i|
      = f.label :affordability, :class => 'radio-inline' do
        = f.radio_button :affordability, i
        =i

  .form-group
    %b Helpfulness
    %br
    -(1..5).each do |i|
      = f.label :helpfulness, :class => 'radio-inline' do
        = f.radio_button :helpfulness, i
        =i

  .form-group
    %b Accomodations
    %br
    -(1..5).each do |i|
      = f.label :accomodations, :class => 'radio-inline' do
        = f.radio_button :accomodation, i
        =i

  .form-group
    %b Comments
    =f.text_field :comments, :value => "No comments"

  =f.hidden_field :user_id, :value => current_user.id
  .form-group
    = f.submit 'Save', :class => 'btn btn-primary'
