<%= form_for(@realtor) do |f| %>
  <% if @realtor.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@realtor.errors.count, "error") %> prohibited this realtor from being saved:</h2>

      <ul>
      <% @realtor.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name , required: true %>
  </div>
  <div class="field">
    <%= f.label :address %><br>
    <%= f.text_field :address, required: true%>
  </div>
  <div class="field">
    <%= f.label :college%><br>
    <%= f.text_field :college%>
  </div>
  <div class="field" style="padding-bottom:10px;">
    <%= f.label :Website %><br>
    <%= f.text_field :realtor_url %>
  </div>
  
  <div class="actions">
    <%= f.submit 'Save', :class => 'btn btn-primary'%>
  </div>
<% end %>
